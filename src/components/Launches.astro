---
import { options } from "@astrojs/check/dist/options"
import CardLaunch from "./CardLaunch.astro"
import { getLastestLaunches } from "../services/spacex";

const launches = await getLastestLaunches()
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {
        launches.map (({ id, links, details, flight_number: flightNumber, success}) => (
        <CardLaunch
            id = {id}
            details={details}
            img={links.patch.small}
            flightNumber={flightNumber}
            success={success}
        />
    ))
    }
</div>