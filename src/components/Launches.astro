---
import { options } from "@astrojs/check/dist/options"
import { type APISpaceXResponses} from "../types/api"

    const res = await fetch("https://api.spacexdata.com/v5/launches/query", {
        //Llamada a una api en javascript
        method: "POST",
        headers: {
            "Content-type": "application/json",
        },
        body: JSON.stringify({
            query: {},
            options: {
                sort: {
                    date_unix:"asc",
                },
                limit:12,
            },
        }),
    })

    const {docs : launches} = (await res.json()) as APISpaceXResponses
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {
        launches.map(
        (launch) => <article> 
        (
            <img src={launch.links.patch.small} alt="" />
            <h2>Launch #{launch.id}</h2>
        )
        </article>)
    }
</div>